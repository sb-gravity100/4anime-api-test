{
    "exclude": [
        "node_modules/@babel/",
        "./index.js",
        "./index.d.ts",
        "./src/interfaces.ts"
    ],
    "include": ["./src/*.ts"],
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "declaration": true,
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "outDir": "./dist/",
        "strict": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false
    }
}

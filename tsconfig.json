{
    "exclude": [
        "node_modules/@babel/",
        "./index.js",
        "./index.d.ts",
        "./src/interfaces.ts"
    ],
    "include": ["./src/*.ts"],
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "lib": [],
        "declaration": true,
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "outDir": "./dist/",
        "strict": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false
    },
    "typedocOptions": {
        "out": "./docs/",
        "entryPoints": ["src/"],
        "name": "4Anime Scraper API",
        "includeVersion": false,
        "readme": "./README.md"
    }
}
